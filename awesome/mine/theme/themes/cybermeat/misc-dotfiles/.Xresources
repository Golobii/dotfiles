!-------------------------------------------------
!	Bash config

!-------------------------------------------------
!	URxvt config

URxvt.scrollBar:                      false
URxvt.cursorBlink:                    true
URxvt.cursorUnderline:                false
URxvt.transparent:                    false
URxvt.depth:			      32
URxvt.background:                     #21212D
URxvt.foreground:                     #ffffff



URxvt.font: 			xft:droidsansmono:size=11:hinting=true
URxvt.boldFont: 		xft:droidsansmono:bold:size=11:hinting=true
URxvt.italicFont:		xft:droidsansmono:italic:size=11:hinting=true
URxvt.boldItalicFont:	xft:droidsansmono:bolditalic:size=11=hinting=true

URxvt.perl-ext-common:  		default,clipboard,url-select,keyboard-select,vtwheel
URxvt.url-select.launcher:      /usr/bin/firefox
URxvt.url-select.underline:		true
URxvt.matcher.button:   		1

